/*
Implemente um programa que receba como entrada um número inteiro positivo N. 
Depois disto, o programa deve imprimir uma sequência que é incialmente crescente e depois, decrescente. 
Obedeça o seguinte padrão: 1 2 3 ... N (N-1) ... 3 2 1.
*/

#include <iostream>

using namespace std;

int main(){
int N, N2=1, cont;
  cin >> N;
 
  while(N2<N){
    cout << N2 << " ";
    N2++;}
  while(N>=1){
    cout << N << " ";
    N--;}
return 0;
}
