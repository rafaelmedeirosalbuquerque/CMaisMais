/*
Soma dos dígitos
Escreva um programa que lê um número inteiro n e imprime a soma dos dígitos desse número.
*/

#include <iostream>

using namespace std;

int main(){
    
    int N, soma=0, digito;
    cin >> N;
 
    while (N > 0){
        digito =  N % 10;       /* o digito mais à direita de N é obtido */
        soma = soma + digito;
        N = N / 10;             /* N passa a ser o N anterior sem o dígito mais à direita */
    }
  
    cout << soma << endl;
    return 0;
}
