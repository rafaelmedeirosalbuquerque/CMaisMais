/*
(Ordenação-busca) Escreva um programa para organizar em ordem crescente uma série de valores inteiros não repetidos recebidos na entrada (N < 20). 
Além disso, seu programa deve realizar uma busca, exibindo se o valor foi ou não encontrado e sua posição atual. 
A entrada de dados é composta pelo tamanho do vetor, seus valores e por fim o valor a ser pesquisado. 
Implemente e utilize suas funções na solução do problema.
*/

#include <iostream>
#define MAX 20
using namespace std;
void troca(float vet[], int i, int j);
void bubble(float vet[], int tam);
void print(float vet[], int tam, int valorpesquisado);

int main(){
    float vet[MAX];
    float valor=1;
    int tam=0, valorpesquisado=0;
    
    cin >> tam;
    for(int i=0; i<tam; i++){
        cin >> valor;
        vet[i] = valor;
    }
  	cin>>valorpesquisado;
    
    bubble(vet, tam);
    print(vet, tam, valorpesquisado);
    
    return 0;
}

void troca(float vet[], int i, int j){
    float temp   = vet[i];
    vet[i]       = vet[j];
    vet[j]       = temp;
}

void bubble(float vet[], int tam){
    for(int i=0; i<tam; i++){
        for(int j=0; j<tam-1-i; j++){
            if(vet[j] > vet[j+1]) 
                troca(vet,j,j+1);
        }
    }
}
void print(float vet[], int tam, int valorpesquisado){
        int achou=0;
        
  					for(int i=0; i<tam; i++){
            if(vet[i]==valorpesquisado){
                cout << valorpesquisado << " encontrado no indice " << i << " ";
              	achou = 1;
            }             	
        }
        if(achou==0)
             	cout << valorpesquisado << " nao encontrado" << endl;
    cout << endl;
}
