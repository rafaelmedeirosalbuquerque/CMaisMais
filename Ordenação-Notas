/*
(Ordenação-Notas) Considerando um vetor (N<=50) composto pelas notas dos alunos de uma certa disciplina. 
Escreva um programa que realize sua ordenação na ordem crescente. Depois, exiba o índice de todas as notas que estão igual ou acima da média 5.0. 
Implemente o método da bolha (Bubble Sort) para ordenação. Obs: Primeiro deve ser lido o tamanho do vetor, depois todos os seus valores.
/*

#include <iostream>
#define MAX 50
using namespace std;
void troca(float vet[], int i, int j);
void bubble(float vet[], int tam);
void print(float vet[], int tam);

int main(){
    float vet[MAX];
    float valor=1;
    int tam=0;
    
    cin >> tam;
    for(int i=0; i<tam; i++){
        cin >> valor;
        vet[i] = valor;
    }
    
    bubble(vet, tam);
    print(vet, tam);
    
    return 0;
}

void troca(float vet[], int i, int j){
    float temp   = vet[i];
    vet[i]       = vet[j];
    vet[j]       = temp;
}

void bubble(float vet[], int tam){
    for(int i=0; i<tam; i++){
        for(int j=0; j<tam-1-i; j++){
            if(vet[j] > vet[j+1]) 
                troca(vet,j,j+1);
        }
    }
}
void print(float vet[], int tam){
        
        for(int i=0; i<tam; i++){
            if(vet[i]>=5){
                cout << i << " ";
            }
        }
    cout << endl;
}
