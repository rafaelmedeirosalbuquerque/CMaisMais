/*
(Ordenação-StringDigitos) Escreva um programa cujo objetivo seja a ordenação de uma string (cadeia de caracteres, N < 20) formada por dígitos (0-9). 
Utilize o método de ordenação que julgar adequado e imprima na saída, separada por "-", a cadeia de caracteres em ordem decrescente. 
É obrigatório a implementação de suas funções para resolver este problema, aproveite e utilize a solução inicial abaixo como referência. 
Para consulta: www.asciitable.com 
*/

#include <iostream>
#define MAX 20
using namespace std;
void troca(char vet[], int i, int j);
void bubble(char vet[], int tam);
void print(char vet[], int tam);

int main(){
    char vet[MAX], valor=0;
    int tam=MAX;
   
    for(int i=0; i<tam; i++){
        cin >> valor;
        vet[i] = valor;
        valor=0;
    }

    bubble(vet, tam);
    print(vet, tam);
    
    return 0;
}

void troca(char vet[], int i, int j){
    char temp   = vet[i];
    vet[i]       = vet[j];
    vet[j]       = temp;
}

void bubble(char vet[], int tam){
    for(int i=0; i<tam; i++){
        for(int j=0; j<tam-1-i; j++){
            if(vet[j] > vet[j+1]) 
                troca(vet,j,j+1);
        }
    }
}
void print(char vet[], int tam){
        
  			cout << vet[tam-1];
        for(int i=tam-2; i>0; i--){
          	if(vet[i]!=0)
                cout << "-" << vet[i];
        }
    cout << endl;
}
